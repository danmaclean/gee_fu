  <dt><strong>Feature:</strong></dt>
  <dd><%= @feature.feature %></dd>
  <dt><strong>Start:</strong></dt>
  <dd><%= @feature.start %></dd>
  <dt><strong>End:</strong></dt>
  <dd><%= @feature.end %></dd>
  <dt><strong>Strand:</strong></dt>
  <dd><%= @feature.strand %></dd>
  <dt><strong>Attributes:</strong></dt>
  <dd><%= @feature.group.join(' ') %></dd>
  <dt><strong>Created:</strong></dt>
  <dd><%=l @feature.created_at.to_date, format: :short %></dd>
</dl>


