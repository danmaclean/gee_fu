	<div id="group">
	</div>
		<a href="#" onClick="addGroup()"; return false;>Add New Attribute</a>
	<%=	hidden_field_tag 'old_feature_id', @feature.id %>
	
	<p>
      <%= f.button :submit, :class => 'btn-primary' %>
    	<%#= f.submit 'Update' %>
  	</p>
<% end %>

